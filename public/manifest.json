{
  "manifest_version": 2,
  "version": "0.0.1",
  "short_name": "React App",
  "name": "Jotform Password Manager",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Jotform Password Manager"
  },
  "content_scripts": [
    {
      "matches": ["*://*/**"],
      "js": ["content-script.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources" : [
    "*.html"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://js.jotform.com; object-src 'self'",
  "permissions": ["tabs", "activeTab", "<all_urls>", "*://*/*", "webRequest"]
}
